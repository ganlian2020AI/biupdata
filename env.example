# 数据库配置
DB_USER=root
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=3306
DB_NAME=crypto_data

# API配置
API_PORT=8080
API_ALLOWED_ORIGINS=*

# 币安API配置
BINANCE_SYMBOLS=BTCUSDT,ETHUSDT,BNBUSDT
BINANCE_INTERVALS=5m,30m,1h,4h
BINANCE_BASE_URL=https://api.binance.com
BINANCE_PROXY_URL=https://your-proxy-url/
BINANCE_USE_PROXY=false
BINANCE_TEST_SYMBOL=BTCUSDT

# 时区配置（默认为上海时区，东八区）
TIMEZONE=Asia/Shanghai
TIMEZONE_OFFSET=8

# 日志配置
LOG_FILE=logs/biupdata.log
LOG_MAX_SIZE=10
LOG_MAX_BACKUPS=5
LOG_MAX_AGE=30
LOG_COMPRESS=true
LOG_MAX_RECORDS=1000

# 定时任务配置（每分钟检查一次是否需要更新）
CRON_UPDATE_SCHEDULE=0 * * * * *